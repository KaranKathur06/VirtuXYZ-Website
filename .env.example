# Copy this file to .env.local and fill in real values.
# Do NOT commit .env.local

# =============================
# Database (Hostinger MySQL)
# =============================
# Format: mysql://USER:PASSWORD@HOST:3306/DATABASE
DATABASE_URL="mysql://USER:PASSWORD@HOST:3306/DATABASE"

# =============================
# NextAuth (Auth.js)
# =============================
# Production: https://virtuxyz.com

# =============================
# Resend (Email)
# =============================
RESEND_API_KEY="re_REPLACE_ME"
# Must be a verified sender/domain in Resend
RESEND_FROM_EMAIL="admin@virtuxyz.com"

# Optional: where agents are redirected to log in
AGENT_LOGIN_URL="https://virtuxyz.com/agent-portal"

# =============================
# Booking (Google Calendar)
# =============================
# NOTE: Current code may also hardcode this URL, but keep it here for consistency.
NEXT_PUBLIC_BOOKING_URL="https://calendar.app.google/kA9K5gvLXzqJRHD99"

# =============================
# Uploads (Option 1: Hostinger filesystem)
# =============================
# Directory relative to project root where uploaded profile photos are stored.
# Recommended: public/uploads
UPLOAD_DIR="public/uploads"
# Max upload size in bytes (e.g. 5MB)
UPLOAD_MAX_BYTES="5242880"
# Allowed mime types for profile photos
UPLOAD_ALLOWED_MIME_TYPES="image/jpeg,image/png"
